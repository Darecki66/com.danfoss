{
  "id": "com.danfoss",
  "sdk": 2,
  "name": {
    "en": "Danfoss Thermostat Support",
    "nl": "Danfoss Thermostaat Ondersteuning"
  },
  "version": "2.0.0",
  "compatibility": ">=1.5.3",
  "description": {
    "en": "Danfoss Thermostat valves support for Homey",
    "nl": "Danfoss Theromstaat knoppen ondersteuning voor Homey"
  },
  "category": [
    "climate"
  ],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Athom B.V.",
        "email": "info@athom.com"
      },
      {
        "name": "Marco Ruiter",
        "email": "mruiter@tuxweb.nl"
      }
    ]
  },
  "drivers": [
    {
      "id": "LC13",
      "name": {
        "en": "Danfoss LC Thermostats",
        "nl": "Danfoss LC Thermostaat"
      },
      "zwave": {
        "manufacturerId": 2,
        "productTypeId": [
          5,
          32773
        ],
        "wakeUpInterval": 1800,
        "productId": [
          1,
          3,
          4
        ],
        "learnmode": {
          "instruction": {
            "en": "Press the middle button on your Danfoss LC",
            "nl": "Druk op de middelste knop van de Danfoss LC"
          }
        },
        "associationGroups": [
          1
        ]
      },
      "mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": []
          },
          {
            "id": "battery",
            "capabilities": [
              "measure_battery"
            ]
          },
          {
            "id": "thermostat",
            "capabilities": [
              "target_temperature"
            ]
          }
        ]
      },
      "class": "thermostat",
      "capabilities": [
        "target_temperature",
        "measure_battery"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 4,
          "max": 28,
          "step": 0.5
        }
      },
      "images": {
        "large": "/drivers/LC/assets/images/large.jpg",
        "small": "/drivers/LC/assets/images/small.jpg"
      }
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "battery_alarm",
        "title": {
          "en": "The battery alarm turned on",
          "nl": "De batterijwaarschuwing gaat aan"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Danfoss_LC"
          }
        ]
      }
    ],
    "actions": []
  }
}
